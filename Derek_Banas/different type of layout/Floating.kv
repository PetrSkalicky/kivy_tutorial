<CustButton@Button>:
    font_size: 32
    color: 0, 0, 0, 1
    background_normal: ''
    background_down: 'bkgrd-down-color.png'
    background_color: .88, .88, .88, 1
    size_hint: .4, .3

<FloatLayout>:
    CustButton:
        text: "top left"
        pos_hint: {"x": 0, "top": 1}

    CustButton:
        text: "top right"
        pos_hint: {"right": 1, "top": 1}

    CustButton:
        text: "bottom left"
        pos_hint: {"left": 1, "y": 0}
    
    CustButton:
        text: "bottom right"
        pos_hint: {"right": 1, "bottom": 0}

    CustButton:
        text: "center"
        pos_hint: {"center_x": .5, "center_y": .5}